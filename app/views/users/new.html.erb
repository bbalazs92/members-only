<h1>Sign up</h1>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username %><br>
        <%= form.text_field :username %><br>
    </div>

    <div>
        <%= form.label :email %><br>
        <%= form.text_field :email %><br>
    </div>

    <div>
        <%= form.label :password %><br>
        <%= form.password_field :password %><br>
    </div>

    <div>
        <%= form.label :validate_password %><br>
        <%= form.password_field :validate_password %><br>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<a href="/users">Main</a>